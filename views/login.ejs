<!doctype html>
<html>
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
   
    <!-- CSS 첨부하는 곳 -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans+KR:wght@200;400&display=swap" rel="stylesheet"> 
    <link rel="stylesheet" href="/public/main.css">
   
    <title>Oneul : 오늘에 대하여</title>
  </head>
  <body>

    <%- include('nav.html') %>      

      <div class="container mt-4 my-5">
            <h4>Login</h4>
            <div class="form-group">
                <label for="text">아이디</label>
                <input type="text" class="form-control" id="id" name="id">
            </div>
            <div class="form-group">
                <label for="text">비밀번호</label>
                <input type="text" class="form-control" id="pw" name="pw">
            </div>
            <button id="login" type="submit" class="btn btn-light">로그인하기</button>
      </div>

      <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

      <script>
        $('#login').click(()=>{
          const id = $('#id').val();
          const pw = $('#pw').val();
          $.ajax({
            url : '/member/login' ,
            method : 'POST',
            data : {id : id, pw : pw}
          }).done((결과)=>{
            if(결과.code == 1) {
              alert(id + ' 님 로그인 하셨습니다.');
              location.href = "/";
            } else {
              alert('아이디나 비밀번호를 확인해주세요');
              $('#id').focus();
            }
          });
        });
      </script>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>